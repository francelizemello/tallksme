<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_menor"
    android:layout_marginBottom="@dimen/padding_menor"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_frase_item"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_gallery"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_frase_titulo_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_menor"
                android:layout_marginTop="@dimen/padding_menor"
                android:layout_marginBottom="@dimen/padding_menor"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="Damon Salvatore"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_frase_mensagem_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_menor"
                android:layout_marginTop="@dimen/padding_menor"
                android:layout_marginBottom="@dimen/padding_menor"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="Damon Salvatore"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>